---
interface Props {
  author: string;
}

const { author } = Astro.props;

// Author data - can be expanded to support multiple authors
const authorData: Record<string, { name: string; bio: string; image?: string; linkedin?: string }> = {
  'RADICA Team': {
    name: 'RADICA Team',
    bio: 'The RADICA team specializes in marketing automation, omni-channel communication, and AI-powered customer engagement solutions. We help businesses transform their marketing with data-driven strategies and cutting-edge technology.',
    image: '/logo.png',
    linkedin: 'https://www.linkedin.com/company/radica'
  }
};

const authorInfo = authorData[author] || authorData['RADICA Team'];
---

<aside class="author-bio">
  <div class="author-avatar">
    {authorInfo.image ? (
      <img src={authorInfo.image} alt={authorInfo.name} />
    ) : (
      <div class="author-avatar-placeholder">{authorInfo.name.charAt(0)}</div>
    )}
  </div>
  <div class="author-info">
    <p class="author-label">Written by</p>
    <h3 class="author-name">{authorInfo.name}</h3>
    <p class="author-description">{authorInfo.bio}</p>
    {authorInfo.linkedin && (
      <a href={authorInfo.linkedin} target="_blank" rel="noopener noreferrer" class="author-social">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
          <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
        </svg>
        Follow on LinkedIn
      </a>
    )}
  </div>
</aside>

<style>
  .author-bio {
    display: flex;
    gap: 24px;
    padding: 32px;
    background: #f9fafb;
    border-radius: 12px;
    margin: 48px 0;
  }

  .author-avatar {
    flex-shrink: 0;
  }

  .author-avatar img {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    object-fit: contain;
    background: white;
    padding: 8px;
  }

  .author-avatar-placeholder {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background: var(--primary);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    font-weight: 700;
  }

  .author-info {
    flex: 1;
  }

  .author-label {
    font-size: 13px;
    color: var(--text-gray);
    margin-bottom: 4px;
  }

  .author-name {
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 8px;
    color: var(--text-dark);
  }

  .author-description {
    color: var(--text-gray);
    font-size: 14px;
    line-height: 1.6;
    margin-bottom: 16px;
  }

  .author-social {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: var(--primary);
    font-weight: 500;
    font-size: 14px;
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .author-social:hover {
    opacity: 0.8;
  }

  @media (max-width: 640px) {
    .author-bio {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }
  }
</style>
