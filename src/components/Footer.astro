---
const footerLinks = {
  solutions: [
    { label: 'Omni-Channel Marketing', href: '/solutions/omni-channel/' },
    { label: 'Marketing Automation', href: '/solutions/marketing-automation/' },
    { label: 'WhatsApp Marketing', href: '/solutions/whatsapp/' },
    { label: 'Email Marketing', href: '/solutions/email/' },
    { label: 'SMS Marketing', href: '/solutions/sms/' },
    { label: 'Conversational Marketing', href: '/solutions/conversational/' },
  ],
  industries: [
    { label: 'Banking', href: '/industries/finance/' },
    { label: 'Insurance', href: '/industries/insurance/' },
    { label: 'E-Commerce', href: '/industries/retail/' },
    { label: 'Healthcare', href: '/industries/healthcare/' },
    { label: 'Technology', href: '/industries/technology/' },
  ],
  services: [
    { label: 'Consultation Service', href: '/services/' },
    { label: 'Data Analytics Service', href: '/services/' },
    { label: 'Training Course', href: '/services/' },
  ],
  resources: [
    { label: 'Blog', href: '/blog/' },
    { label: 'Videos', href: '/videos/' },
    { label: 'Events', href: '/events/' },
  ],
  about: [
    { label: 'About RADICA', href: '/about/' },
    { label: 'GutCommon', href: '/about/#gutcommon' },
    { label: 'Contact', href: '/contact/' },
    { label: 'Request Demo', href: '/request-demo/' },
  ],
};

const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="container">
    <div class="footer-grid">
      <div class="footer-brand">
        <a href="/" class="footer-logo">
          <img src="/logo.png" alt="RADICA" height="36" />
        </a>
        <p class="footer-tagline">
          AI-Powered Marketing Automation Platform for Enterprise Success
        </p>
        <div class="footer-social">
          <a href="https://linkedin.com/company/radica" aria-label="LinkedIn" target="_blank" rel="noopener">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
          </a>
        </div>
      </div>

      <div class="footer-links-group">
        <h4>Solutions</h4>
        <ul>
          {footerLinks.solutions.map((link) => (
            <li><a href={link.href}>{link.label}</a></li>
          ))}
        </ul>
      </div>

      <div class="footer-links-group">
        <h4>Industries</h4>
        <ul>
          {footerLinks.industries.map((link) => (
            <li><a href={link.href}>{link.label}</a></li>
          ))}
        </ul>
      </div>

      <div class="footer-links-group">
        <h4>Services</h4>
        <ul>
          {footerLinks.services.map((link) => (
            <li><a href={link.href}>{link.label}</a></li>
          ))}
        </ul>
      </div>

      <div class="footer-links-group">
        <h4>Resources</h4>
        <ul>
          {footerLinks.resources.map((link) => (
            <li><a href={link.href}>{link.label}</a></li>
          ))}
        </ul>
      </div>

      <div class="footer-links-group">
        <h4>About Us</h4>
        <ul>
          {footerLinks.about.map((link) => (
            <li><a href={link.href}>{link.label}</a></li>
          ))}
        </ul>
      </div>
    </div>

    <div class="footer-bottom">
      <p>&copy; {currentYear} RADICA. All rights reserved.</p>
      <div class="footer-bottom-right">
        <div class="language-switcher">
          <button class="lang-btn active" data-lang="en">EN</button>
          <button class="lang-btn" data-lang="zh-TW">繁中</button>
          <button class="lang-btn" data-lang="ja">日本語</button>
        </div>
        <div class="footer-legal">
          <a href="/privacy/">Privacy Policy</a>
          <a href="/terms/">Terms of Service</a>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--header-dark);
    color: white;
    padding: 60px 0 30px;
    margin-top: auto;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr 1fr 1fr;
    gap: 40px;
    margin-bottom: 40px;
  }

  .footer-brand {
    padding-right: 40px;
  }

  .footer-logo {
    display: inline-block;
    margin-bottom: 16px;
  }

  .footer-tagline {
    color: rgba(255, 255, 255, 0.7);
    font-size: 14px;
    line-height: 1.6;
    margin-bottom: 20px;
  }

  .footer-social {
    display: flex;
    gap: 12px;
  }

  .footer-social a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 6px;
    color: white;
    transition: all 0.3s ease;
  }

  .footer-social a:hover {
    background: var(--primary-purple);
  }

  .footer-links-group h4 {
    font-size: 14px;
    font-weight: 600;
    margin-bottom: 16px;
    color: white;
  }

  .footer-links-group ul {
    list-style: none;
  }

  .footer-links-group li {
    margin-bottom: 10px;
  }

  .footer-links-group a {
    color: rgba(255, 255, 255, 0.7);
    font-size: 14px;
    transition: color 0.3s ease;
  }

  .footer-links-group a:hover {
    color: var(--primary-purple-light);
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 30px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer-bottom p {
    color: rgba(255, 255, 255, 0.5);
    font-size: 14px;
  }

  .footer-legal {
    display: flex;
    gap: 24px;
  }

  .footer-legal a {
    color: rgba(255, 255, 255, 0.5);
    font-size: 14px;
    transition: color 0.3s ease;
  }

  .footer-legal a:hover {
    color: white;
  }

  .footer-bottom-right {
    display: flex;
    align-items: center;
    gap: 24px;
  }

  .language-switcher {
    display: flex;
    gap: 4px;
    background: rgba(255, 255, 255, 0.1);
    padding: 4px;
    border-radius: 8px;
  }

  .lang-btn {
    background: transparent;
    border: none;
    color: rgba(255, 255, 255, 0.6);
    padding: 6px 12px;
    font-size: 13px;
    font-weight: 500;
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .lang-btn:hover {
    color: white;
    background: rgba(255, 255, 255, 0.1);
  }

  .lang-btn.active {
    background: var(--primary-purple);
    color: white;
  }

  @media (max-width: 1024px) {
    .footer-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .footer-brand {
      grid-column: span 2;
      padding-right: 0;
    }
  }

  @media (max-width: 640px) {
    .footer-grid {
      grid-template-columns: 1fr;
    }

    .footer-brand {
      grid-column: span 1;
    }

    .footer-bottom {
      flex-direction: column;
      gap: 16px;
      text-align: center;
    }

    .footer-bottom-right {
      flex-direction: column;
      gap: 16px;
    }

    .language-switcher {
      order: -1;
    }
  }
</style>
