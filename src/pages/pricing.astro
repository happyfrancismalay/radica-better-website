---
import BaseLayout from '../layouts/BaseLayout.astro';

// Schema.org Product structured data for pricing
const pricingSchema = {
  '@context': 'https://schema.org',
  '@type': 'Product',
  name: 'RADICA Marketing Automation Platform',
  description: 'AI-Powered Marketing Automation Platform for omni-channel customer engagement including Email, SMS, and WhatsApp marketing.',
  brand: {
    '@type': 'Brand',
    name: 'RADICA'
  },
  offers: [
    {
      '@type': 'Offer',
      name: 'Starter Plan',
      description: 'For growing businesses getting started with automation - up to 10,000 contacts',
      priceCurrency: 'HKD',
      availability: 'https://schema.org/InStock',
      url: 'https://www.radicaai.com/pricing/'
    },
    {
      '@type': 'Offer',
      name: 'Professional Plan',
      description: 'For businesses ready to scale their marketing - up to 100,000 contacts',
      priceCurrency: 'HKD',
      availability: 'https://schema.org/InStock',
      url: 'https://www.radicaai.com/pricing/'
    },
    {
      '@type': 'Offer',
      name: 'Enterprise Plan',
      description: 'For large organizations with complex needs - unlimited contacts',
      priceCurrency: 'HKD',
      availability: 'https://schema.org/InStock',
      url: 'https://www.radicaai.com/pricing/'
    }
  ],
  aggregateRating: {
    '@type': 'AggregateRating',
    ratingValue: '4.8',
    reviewCount: '520'
  }
};

const plans = [
  {
    name: 'Starter',
    description: 'For growing businesses getting started with automation',
    price: 'Contact Us',
    features: [
      'Up to 10,000 contacts',
      'Email marketing',
      'Basic automation workflows',
      'Standard analytics',
      'Email support',
      'Basic integrations'
    ],
    highlighted: false
  },
  {
    name: 'Professional',
    description: 'For businesses ready to scale their marketing',
    price: 'Contact Us',
    features: [
      'Up to 100,000 contacts',
      'Email + SMS marketing',
      'Advanced automation',
      'A/B testing',
      'Priority support',
      'Advanced integrations',
      'Custom reports'
    ],
    highlighted: true
  },
  {
    name: 'Enterprise',
    description: 'For large organizations with complex needs',
    price: 'Custom',
    features: [
      'Unlimited contacts',
      'All channels (Email, SMS, WhatsApp)',
      'AI-powered optimization',
      'Dedicated success manager',
      '24/7 premium support',
      'Custom integrations',
      'SLA guarantee',
      'On-premise option'
    ],
    highlighted: false
  }
];

const faqs = [
  {
    question: 'How does pricing work?',
    answer: 'Our pricing is based on your contact list size and the features you need. Contact our sales team for a customized quote based on your specific requirements.'
  },
  {
    question: 'Is there a free trial?',
    answer: 'Yes, we offer a personalized demo and pilot program for qualified businesses. Request a demo to learn more about our trial options.'
  },
  {
    question: 'Can I change plans later?',
    answer: 'Absolutely. You can upgrade or adjust your plan as your business grows. Our team will help you find the right fit.'
  },
  {
    question: 'What payment methods do you accept?',
    answer: 'We accept major credit cards, bank transfers, and can accommodate annual billing with discounts for committed contracts.'
  },
  {
    question: 'Is there a setup fee?',
    answer: 'Setup fees vary based on your implementation requirements. Our team will provide a clear breakdown during the sales process.'
  }
];
---

<BaseLayout title="Pricing - RADICA" description="Explore RADICA pricing plans for marketing automation. From startups to enterprises, we have a plan that fits your needs and budget.">

<script type="application/ld+json" set:html={JSON.stringify(pricingSchema)} slot="head" />

  <section class="page-hero">
    <div class="container">
      <h1>Simple, Transparent Pricing</h1>
      <p>Choose the plan that's right for your business. All plans include core platform features.</p>
    </div>
  </section>

  <!-- Pricing Plans -->
  <section class="section">
    <div class="container">
      <div class="pricing-grid">
        {plans.map((plan) => (
          <div class={`pricing-card ${plan.highlighted ? 'highlighted' : ''}`}>
            {plan.highlighted && <div class="popular-badge">Most Popular</div>}
            <h3>{plan.name}</h3>
            <p class="plan-description">{plan.description}</p>
            <div class="plan-price">{plan.price}</div>
            <ul class="plan-features">
              {plan.features.map((feature) => (
                <li>{feature}</li>
              ))}
            </ul>
            <a href="/request-demo/" class={`btn ${plan.highlighted ? 'btn-primary' : 'btn-secondary'} btn-full`}>
              Get Started
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="section section-gray">
    <div class="container">
      <h2 class="section-title">Frequently Asked Questions</h2>
      <p class="section-subtitle">Got questions? We've got answers.</p>

      <div class="faq-grid">
        {faqs.map((faq) => (
          <div class="faq-item">
            <h4>{faq.question}</h4>
            <p>{faq.answer}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="container">
      <div class="cta-content">
        <h2>Need a Custom Solution?</h2>
        <p>Contact our sales team for enterprise pricing and custom packages.</p>
        <a href="/contact/" class="btn btn-white btn-large">Contact Sales</a>
      </div>
    </div>
  </section>

</BaseLayout>

<style>
  .page-hero {
    background: linear-gradient(135deg, var(--header-dark) 0%, var(--primary-purple-dark) 100%);
    padding: 140px 0 80px;
    text-align: center;
    color: white;
  }

  .page-hero h1 {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 20px;
  }

  .page-hero p {
    font-size: 1.25rem;
    opacity: 0.9;
    max-width: 600px;
    margin: 0 auto;
  }

  .pricing-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
    align-items: start;
  }

  .pricing-card {
    background: white;
    border-radius: 16px;
    padding: 40px 30px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    position: relative;
    transition: all 0.3s ease;
  }

  .pricing-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.12);
  }

  .pricing-card.highlighted {
    border: 2px solid var(--primary-purple);
    transform: scale(1.05);
  }

  .pricing-card.highlighted:hover {
    transform: scale(1.05) translateY(-5px);
  }

  .popular-badge {
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    background: var(--gradient-purple);
    color: white;
    padding: 6px 20px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 600;
  }

  .pricing-card h3 {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 8px;
  }

  .plan-description {
    color: var(--text-gray);
    font-size: 14px;
    margin-bottom: 24px;
  }

  .plan-price {
    font-size: 2rem;
    font-weight: 800;
    color: var(--primary-purple);
    margin-bottom: 24px;
  }

  .plan-features {
    list-style: none;
    margin-bottom: 30px;
  }

  .plan-features li {
    padding: 10px 0;
    padding-left: 28px;
    position: relative;
    font-size: 14px;
    border-bottom: 1px solid var(--border-color);
  }

  .plan-features li:last-child {
    border-bottom: none;
  }

  .plan-features li::before {
    content: 'âœ“';
    position: absolute;
    left: 0;
    color: var(--primary-purple);
    font-weight: 700;
  }

  .btn-full {
    width: 100%;
  }

  .faq-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 30px;
    max-width: 900px;
    margin: 0 auto;
  }

  .faq-item {
    background: white;
    padding: 30px;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  .faq-item h4 {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 12px;
    color: var(--text-dark);
  }

  .faq-item p {
    color: var(--text-gray);
    font-size: 14px;
    line-height: 1.6;
  }

  .cta-section {
    background: var(--gradient-purple);
    padding: 80px 0;
  }

  .cta-content {
    text-align: center;
    color: white;
  }

  .cta-content h2 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 16px;
  }

  .cta-content p {
    font-size: 1.125rem;
    opacity: 0.9;
    margin-bottom: 32px;
  }

  .btn-white {
    background: white;
    color: var(--primary-purple);
  }

  .btn-large {
    padding: 16px 36px;
    font-size: 16px;
  }

  @media (max-width: 1024px) {
    .pricing-grid {
      grid-template-columns: 1fr;
      max-width: 400px;
      margin: 0 auto;
    }

    .pricing-card.highlighted {
      transform: none;
    }

    .faq-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 640px) {
    .page-hero h1 {
      font-size: 2rem;
    }
  }
</style>
