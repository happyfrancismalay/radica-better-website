<script define:vars={{ albumPhotos }}>
  // GutCommon Scroll Animations
  document.addEventListener('DOMContentLoaded', () => {
    const animatedElements = document.querySelectorAll('.gc-animate');

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry, index) => {
        if (entry.isIntersecting) {
          setTimeout(() => {
            entry.target.classList.add('visible');
          }, index * 50);
          observer.unobserve(entry.target);
        }
      });
    }, {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    });

    animatedElements.forEach((el) => {
      observer.observe(el);
    });

    // Album Filter Functionality
    const filterBtns = document.querySelectorAll('.gc-filter-btn');
    const albumItems = document.querySelectorAll('.gc-album-item');

    filterBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        const filter = btn.dataset.filter;

        filterBtns.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');

        albumItems.forEach(item => {
          if (filter === 'all' || item.dataset.category === filter) {
            item.classList.remove('hidden');
          } else {
            item.classList.add('hidden');
          }
        });
      });
    });

    // Slideshow Functionality
    const slideshowModal = document.getElementById('gc-slideshow');
    const slideshowImg = slideshowModal.querySelector('.gc-slideshow-img');
    const slideshowTitle = slideshowModal.querySelector('.gc-slideshow-title');
    const slideshowDesc = slideshowModal.querySelector('.gc-slideshow-desc');
    const slideshowLocationText = slideshowModal.querySelector('.gc-slideshow-location-text');
    const slideshowGps = slideshowModal.querySelector('.gc-slideshow-gps');
    const slideshowCounter = slideshowModal.querySelector('.gc-slideshow-counter');
    const slideshowProgressBar = slideshowModal.querySelector('.gc-slideshow-progress-bar');
    const closeBtn = slideshowModal.querySelector('.gc-slideshow-close');
    const prevBtn = slideshowModal.querySelector('.gc-slideshow-prev');
    const nextBtn = slideshowModal.querySelector('.gc-slideshow-next');

    let currentIndex = 0;
    let autoAdvanceInterval;
    let progressInterval;
    const autoAdvanceTime = 5000;

    function getVisiblePhotos() {
      return Array.from(albumItems).filter(item => !item.classList.contains('hidden'));
    }

    function showSlide(index) {
      const visibleItems = getVisiblePhotos();
      if (visibleItems.length === 0) return;

      currentIndex = ((index % visibleItems.length) + visibleItems.length) % visibleItems.length;
      const photoIndex = parseInt(visibleItems[currentIndex].dataset.index);
      const photo = albumPhotos[photoIndex];

      slideshowImg.src = photo.src;
      slideshowImg.alt = photo.title;
      slideshowTitle.textContent = photo.title;
      slideshowDesc.textContent = photo.description;
      slideshowLocationText.textContent = photo.location;
      slideshowGps.textContent = photo.gps ? `(${photo.gps.lat.toFixed(2)}Â°N, ${photo.gps.lng.toFixed(2)}Â°E)` : '';
      slideshowCounter.textContent = `${currentIndex + 1} / ${visibleItems.length}`;

      resetProgress();
    }

    function resetProgress() {
      clearInterval(progressInterval);
      slideshowProgressBar.style.width = '0%';

      let progress = 0;
      progressInterval = setInterval(() => {
        progress += 100 / (autoAdvanceTime / 100);
        slideshowProgressBar.style.width = `${progress}%`;
      }, 100);
    }

    function startAutoAdvance() {
      clearInterval(autoAdvanceInterval);
      autoAdvanceInterval = setInterval(() => {
        showSlide(currentIndex + 1);
      }, autoAdvanceTime);
    }

    function stopAutoAdvance() {
      clearInterval(autoAdvanceInterval);
      clearInterval(progressInterval);
    }

    function openSlideshow(index) {
      currentIndex = index;
      slideshowModal.classList.add('active');
      document.body.style.overflow = 'hidden';
      showSlide(currentIndex);
      startAutoAdvance();
    }

    function closeSlideshow() {
      slideshowModal.classList.remove('active');
      document.body.style.overflow = '';
      stopAutoAdvance();
    }

    albumItems.forEach((item, index) => {
      item.addEventListener('click', () => {
        const visibleItems = getVisiblePhotos();
        const visibleIndex = visibleItems.indexOf(item);
        openSlideshow(visibleIndex);
      });
    });

    closeBtn.addEventListener('click', closeSlideshow);
    prevBtn.addEventListener('click', () => {
      showSlide(currentIndex - 1);
      startAutoAdvance();
    });
    nextBtn.addEventListener('click', () => {
      showSlide(currentIndex + 1);
      startAutoAdvance();
    });

    slideshowModal.addEventListener('click', (e) => {
      if (e.target === slideshowModal) {
        closeSlideshow();
      }
    });

    document.addEventListener('keydown', (e) => {
      if (!slideshowModal.classList.contains('active')) return;

      if (e.key === 'Escape') closeSlideshow();
      if (e.key === 'ArrowLeft') {
        showSlide(currentIndex - 1);
        startAutoAdvance();
      }
      if (e.key === 'ArrowRight') {
        showSlide(currentIndex + 1);
        startAutoAdvance();
      }
    });

    // Touch/swipe support
    let touchStartX = 0;
    let touchEndX = 0;

    slideshowModal.addEventListener('touchstart', (e) => {
      touchStartX = e.changedTouches[0].screenX;
    }, { passive: true });

    slideshowModal.addEventListener('touchend', (e) => {
      touchEndX = e.changedTouches[0].screenX;
      const diff = touchStartX - touchEndX;

      if (Math.abs(diff) > 50) {
        if (diff > 0) {
          showSlide(currentIndex + 1);
        } else {
          showSlide(currentIndex - 1);
        }
        startAutoAdvance();
      }
    }, { passive: true });

    // Tour Timeline Navigation
    const timelineDots = document.querySelectorAll('.gc-timeline-dot');
    const timelinePanels = document.querySelectorAll('.gc-timeline-panel');

    timelineDots.forEach(dot => {
      dot.addEventListener('click', () => {
        const day = dot.dataset.day;

        timelineDots.forEach(d => d.classList.remove('active'));
        timelinePanels.forEach(p => p.classList.remove('active'));

        dot.classList.add('active');
        document.querySelector(`.gc-timeline-panel[data-day="${day}"]`).classList.add('active');
      });
    });

    // Back to Top button: show when scrolled past the hero, hide when leaving #gutcommon
    const backToTopBtn = document.getElementById('gc-back-to-top');
    const gcHeroEl = document.querySelector('.gc-hero');
    const gcSectionEl = document.getElementById('gutcommon');

    if (backToTopBtn && gcHeroEl && gcSectionEl) {
      window.addEventListener('scroll', () => {
        const heroBottom = gcHeroEl.getBoundingClientRect().bottom;
        const sectionBottom = gcSectionEl.getBoundingClientRect().bottom;
        backToTopBtn.classList.toggle('visible', heroBottom < 0 && sectionBottom > 0);
      }, { passive: true });

      backToTopBtn.addEventListener('click', () => {
        gcSectionEl.scrollIntoView({ behavior: 'smooth' });
      });
    }
  });
</script>
