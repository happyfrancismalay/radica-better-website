---
import BaseLayout from '../../layouts/BaseLayout.astro';

const useCases = [
  {
    title: 'Abandoned Cart Recovery',
    description: 'Automatically remind customers about items left in their cart with personalized messages across email, SMS, and WhatsApp.',
    stat: '25% recovery rate'
  },
  {
    title: 'Product Recommendations',
    description: 'Use AI to suggest products based on browsing history, purchase behavior, and customer preferences.',
    stat: '35% higher AOV'
  },
  {
    title: 'Loyalty Programs',
    description: 'Engage your best customers with automated loyalty communications, rewards notifications, and exclusive offers.',
    stat: '40% more repeat purchases'
  },
  {
    title: 'Post-Purchase Engagement',
    description: 'Build relationships after the sale with order updates, review requests, and personalized follow-ups.',
    stat: '50% review rate'
  }
];

const features = [
  'E-commerce platform integrations (Shopify, Magento, WooCommerce)',
  'Real-time inventory sync for dynamic content',
  'Customer lifetime value tracking',
  'Segmentation by purchase behavior',
  'Cross-sell and upsell automation',
  'Seasonal campaign templates'
];
---

<BaseLayout title="Retail & E-commerce Solutions - RADICA" description="Discover how RADICA helps retail and e-commerce businesses drive sales with personalized marketing automation.">

  <section class="page-hero">
    <div class="container">
      <span class="badge">Industry Solution</span>
      <h1>Retail & E-commerce</h1>
      <p>Drive sales and build customer loyalty with personalized shopping experiences</p>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <h2 class="section-title">Key Use Cases</h2>
      <p class="section-subtitle">How leading retailers use RADICA to grow revenue</p>

      <div class="use-cases-grid">
        {useCases.map((useCase) => (
          <div class="use-case-card">
            <h3>{useCase.title}</h3>
            <p>{useCase.description}</p>
            <div class="use-case-stat">{useCase.stat}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="section section-gray">
    <div class="container">
      <div class="features-content">
        <div class="features-text">
          <h2>Built for Retail</h2>
          <p>RADICA integrates seamlessly with your e-commerce stack to deliver personalized experiences at every touchpoint.</p>
          <ul class="features-list">
            {features.map((feature) => (
              <li>{feature}</li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </section>

  <section class="cta-section">
    <div class="container">
      <div class="cta-content">
        <h2>Ready to Grow Your Retail Business?</h2>
        <p>See how RADICA can help you increase sales and customer loyalty.</p>
        <a href="/request-demo/" class="btn btn-white btn-large">Request Demo</a>
      </div>
    </div>
  </section>

</BaseLayout>

<style>
  .page-hero {
    background: linear-gradient(135deg, var(--header-dark) 0%, var(--primary-purple-dark) 100%);
    padding: 140px 0 80px;
    text-align: center;
    color: white;
  }

  .badge {
    display: inline-block;
    background: rgba(255, 255, 255, 0.2);
    padding: 6px 16px;
    border-radius: 20px;
    font-size: 13px;
    font-weight: 600;
    margin-bottom: 16px;
  }

  .page-hero h1 {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 20px;
  }

  .page-hero p {
    font-size: 1.25rem;
    opacity: 0.9;
    max-width: 600px;
    margin: 0 auto;
  }

  .use-cases-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 30px;
  }

  .use-case-card {
    background: white;
    border-radius: 16px;
    padding: 30px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  .use-case-card h3 {
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 12px;
    color: var(--text-dark);
  }

  .use-case-card p {
    color: var(--text-gray);
    margin-bottom: 16px;
    line-height: 1.6;
  }

  .use-case-stat {
    display: inline-block;
    background: rgba(220, 38, 38, 0.1);
    color: var(--primary-purple);
    padding: 8px 16px;
    border-radius: 20px;
    font-weight: 600;
    font-size: 14px;
  }

  .features-content h2 {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 16px;
  }

  .features-content > div > p {
    color: var(--text-gray);
    margin-bottom: 24px;
  }

  .features-list {
    list-style: none;
    columns: 2;
    column-gap: 40px;
  }

  .features-list li {
    padding: 10px 0;
    padding-left: 28px;
    position: relative;
    font-size: 14px;
  }

  .features-list li::before {
    content: 'âœ“';
    position: absolute;
    left: 0;
    color: var(--primary-purple);
    font-weight: 700;
  }

  .cta-section {
    background: var(--gradient-purple);
    padding: 80px 0;
  }

  .cta-content {
    text-align: center;
    color: white;
  }

  .cta-content h2 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 16px;
  }

  .cta-content p {
    font-size: 1.125rem;
    opacity: 0.9;
    margin-bottom: 32px;
  }

  .btn-white {
    background: white;
    color: var(--primary-purple);
  }

  .btn-large {
    padding: 16px 36px;
    font-size: 16px;
  }

  @media (max-width: 768px) {
    .use-cases-grid {
      grid-template-columns: 1fr;
    }

    .features-list {
      columns: 1;
    }

    .page-hero h1 {
      font-size: 2rem;
    }
  }
</style>
