---
import BaseLayout from '../layouts/BaseLayout.astro';

const capabilities = [
  {
    title: 'Journey Builder',
    description: 'Create sophisticated customer journeys with our visual drag-and-drop builder. Define triggers, conditions, and actions without writing code.',
    features: ['Visual workflow editor', 'Conditional branching', 'A/B testing', 'Time-based triggers']
  },
  {
    title: 'Customer Segmentation',
    description: 'Build precise audience segments using behavioral data, demographics, and custom attributes. Target the right customers at the right time.',
    features: ['Dynamic segments', 'Behavioral targeting', 'RFM analysis', 'Lookalike audiences']
  },
  {
    title: 'AI Content Engine',
    description: 'Leverage AI to generate, optimize, and personalize content at scale. Our machine learning models learn from your data to improve over time.',
    features: ['Content generation', 'Subject line optimization', 'Send time prediction', 'Personalization at scale']
  },
  {
    title: 'Analytics Dashboard',
    description: 'Comprehensive analytics and reporting to measure campaign performance, track ROI, and identify optimization opportunities.',
    features: ['Real-time metrics', 'Attribution modeling', 'Custom reports', 'Revenue tracking']
  }
];

const channels = [
  { name: 'Email', icon: 'ðŸ“§' },
  { name: 'SMS', icon: 'ðŸ’¬' },
  { name: 'WhatsApp', icon: 'ðŸ“±' },
  { name: 'Push Notifications', icon: 'ðŸ””' },
  { name: 'Social Media', icon: 'ðŸ“£' },
  { name: 'In-App Messages', icon: 'ðŸ’»' }
];
---

<BaseLayout title="Platform - RADICA" description="Explore RADICA's comprehensive marketing automation platform featuring AI-powered journey building, customer segmentation, and omnichannel engagement tools.">

  <!-- Hero Section -->
  <section class="page-hero">
    <div class="container">
      <h1>The Complete Marketing Automation Platform</h1>
      <p>Everything you need to create, execute, and optimize personalized customer experiences across every channel.</p>
    </div>
  </section>

  <!-- Capabilities Section -->
  <section class="section">
    <div class="container">
      <h2 class="section-title">Core Capabilities</h2>
      <p class="section-subtitle">Powerful tools designed for enterprise marketing teams</p>

      <div class="capabilities-grid">
        {capabilities.map((cap, index) => (
          <div class="capability-card">
            <div class="capability-number">{String(index + 1).padStart(2, '0')}</div>
            <h3>{cap.title}</h3>
            <p>{cap.description}</p>
            <ul class="capability-features">
              {cap.features.map((feature) => (
                <li>{feature}</li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- AI Features Section -->
  <section class="section section-dark" id="ai-features">
    <div class="container">
      <div class="ai-content">
        <div class="ai-text">
          <span class="badge">AI-Powered</span>
          <h2>Intelligence That Drives Results</h2>
          <p>Our AI engine continuously learns from your customer interactions to deliver smarter, more effective marketing.</p>

          <div class="ai-features-list">
            <div class="ai-feature">
              <h4>Predictive Analytics</h4>
              <p>Anticipate customer behavior and identify opportunities before they happen.</p>
            </div>
            <div class="ai-feature">
              <h4>Smart Recommendations</h4>
              <p>Get AI-powered suggestions for content, timing, and audience targeting.</p>
            </div>
            <div class="ai-feature">
              <h4>Automated Optimization</h4>
              <p>Let AI continuously test and optimize your campaigns for better performance.</p>
            </div>
          </div>
        </div>
        <div class="ai-visual">
          <div class="ai-brain">
            <div class="brain-circle"></div>
            <div class="brain-pulse pulse-1"></div>
            <div class="brain-pulse pulse-2"></div>
            <div class="brain-pulse pulse-3"></div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Channels Section -->
  <section class="section">
    <div class="container">
      <h2 class="section-title">Omnichannel Engagement</h2>
      <p class="section-subtitle">Reach your customers wherever they are</p>

      <div class="channels-grid">
        {channels.map((channel) => (
          <div class="channel-card">
            <span class="channel-icon">{channel.icon}</span>
            <span class="channel-name">{channel.name}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Analytics Section -->
  <section class="section section-gray" id="analytics">
    <div class="container">
      <div class="analytics-preview">
        <div class="analytics-mockup">
          <div class="analytics-header">
            <div class="analytics-title">Campaign Performance</div>
            <div class="analytics-period">Last 30 days</div>
          </div>
          <div class="analytics-metrics">
            <div class="metric">
              <div class="metric-value">2.4M</div>
              <div class="metric-label">Emails Sent</div>
              <div class="metric-change positive">+12%</div>
            </div>
            <div class="metric">
              <div class="metric-value">42.3%</div>
              <div class="metric-label">Open Rate</div>
              <div class="metric-change positive">+5.2%</div>
            </div>
            <div class="metric">
              <div class="metric-value">8.7%</div>
              <div class="metric-label">Click Rate</div>
              <div class="metric-change positive">+2.1%</div>
            </div>
            <div class="metric">
              <div class="metric-value">$124K</div>
              <div class="metric-label">Revenue</div>
              <div class="metric-change positive">+18%</div>
            </div>
          </div>
          <div class="analytics-chart">
            <div class="chart-bar" style="height: 60%"></div>
            <div class="chart-bar" style="height: 75%"></div>
            <div class="chart-bar" style="height: 45%"></div>
            <div class="chart-bar" style="height: 90%"></div>
            <div class="chart-bar" style="height: 70%"></div>
            <div class="chart-bar" style="height: 85%"></div>
            <div class="chart-bar" style="height: 95%"></div>
          </div>
        </div>
        <div class="analytics-content">
          <h2>Data-Driven Decisions</h2>
          <p>Get complete visibility into your marketing performance with real-time analytics and comprehensive reporting.</p>
          <ul>
            <li>Real-time campaign tracking</li>
            <li>Custom dashboard builder</li>
            <li>Revenue attribution</li>
            <li>Exportable reports</li>
            <li>API access for custom analysis</li>
          </ul>
          <a href="/request-demo/" class="btn btn-primary">See It In Action</a>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="container">
      <div class="cta-content">
        <h2>Ready to See RADICA in Action?</h2>
        <p>Schedule a personalized demo with our team.</p>
        <a href="/request-demo/" class="btn btn-white btn-large">Request Demo</a>
      </div>
    </div>
  </section>

</BaseLayout>

<style>
  .page-hero {
    background: linear-gradient(135deg, var(--header-dark) 0%, var(--primary-purple-dark) 100%);
    padding: 140px 0 80px;
    text-align: center;
    color: white;
  }

  .page-hero h1 {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 20px;
  }

  .page-hero p {
    font-size: 1.25rem;
    opacity: 0.9;
    max-width: 600px;
    margin: 0 auto;
  }

  /* Capabilities */
  .capabilities-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 30px;
  }

  .capability-card {
    background: white;
    border-radius: 16px;
    padding: 40px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    position: relative;
  }

  .capability-number {
    position: absolute;
    top: 20px;
    right: 20px;
    font-size: 3rem;
    font-weight: 800;
    color: rgba(220, 38, 38, 0.1);
  }

  .capability-card h3 {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 16px;
    color: var(--text-dark);
  }

  .capability-card p {
    color: var(--text-gray);
    margin-bottom: 24px;
    line-height: 1.6;
  }

  .capability-features {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    list-style: none;
  }

  .capability-features li {
    background: #f3f4f6;
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 13px;
    color: var(--text-dark);
  }

  /* AI Section */
  .ai-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }

  .badge {
    display: inline-block;
    background: rgba(220, 38, 38, 0.2);
    color: var(--primary-purple-light);
    padding: 6px 16px;
    border-radius: 20px;
    font-size: 13px;
    font-weight: 600;
    margin-bottom: 16px;
  }

  .ai-text h2 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 16px;
  }

  .ai-text > p {
    opacity: 0.8;
    margin-bottom: 32px;
    font-size: 1.125rem;
  }

  .ai-features-list {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .ai-feature h4 {
    font-size: 1.125rem;
    margin-bottom: 8px;
  }

  .ai-feature p {
    opacity: 0.7;
    font-size: 14px;
  }

  .ai-visual {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .ai-brain {
    position: relative;
    width: 300px;
    height: 300px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .brain-circle {
    width: 120px;
    height: 120px;
    background: var(--gradient-purple);
    border-radius: 50%;
    position: relative;
    z-index: 2;
  }

  .brain-pulse {
    position: absolute;
    border: 2px solid var(--primary-purple-light);
    border-radius: 50%;
    animation: pulse 3s ease-out infinite;
  }

  .pulse-1 {
    width: 160px;
    height: 160px;
    animation-delay: 0s;
  }

  .pulse-2 {
    width: 220px;
    height: 220px;
    animation-delay: 1s;
  }

  .pulse-3 {
    width: 280px;
    height: 280px;
    animation-delay: 2s;
  }

  @keyframes pulse {
    0% {
      transform: scale(0.8);
      opacity: 1;
    }
    100% {
      transform: scale(1.2);
      opacity: 0;
    }
  }

  /* Channels */
  .channels-grid {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: 20px;
  }

  .channel-card {
    background: white;
    border: 1px solid var(--border-color);
    border-radius: 12px;
    padding: 30px 20px;
    text-align: center;
    transition: all 0.3s ease;
  }

  .channel-card:hover {
    border-color: var(--primary-purple);
    box-shadow: 0 10px 30px rgba(220, 38, 38, 0.1);
  }

  .channel-icon {
    font-size: 2rem;
    display: block;
    margin-bottom: 12px;
  }

  .channel-name {
    font-weight: 600;
    font-size: 14px;
    color: var(--text-dark);
  }

  /* Analytics */
  .analytics-preview {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: 60px;
    align-items: center;
  }

  .analytics-mockup {
    background: white;
    border-radius: 16px;
    padding: 30px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
  }

  .analytics-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 24px;
  }

  .analytics-title {
    font-weight: 700;
    font-size: 1.25rem;
  }

  .analytics-period {
    color: var(--text-gray);
    font-size: 14px;
  }

  .analytics-metrics {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20px;
    margin-bottom: 30px;
  }

  .metric {
    text-align: center;
  }

  .metric-value {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-dark);
  }

  .metric-label {
    font-size: 12px;
    color: var(--text-gray);
    margin: 4px 0;
  }

  .metric-change {
    font-size: 12px;
    font-weight: 600;
  }

  .metric-change.positive {
    color: #10b981;
  }

  .analytics-chart {
    display: flex;
    align-items: flex-end;
    gap: 12px;
    height: 120px;
    padding: 20px 0;
    border-top: 1px solid var(--border-color);
  }

  .chart-bar {
    flex: 1;
    background: var(--gradient-purple);
    border-radius: 4px 4px 0 0;
    transition: height 0.3s ease;
  }

  .analytics-content h2 {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 16px;
  }

  .analytics-content > p {
    color: var(--text-gray);
    margin-bottom: 24px;
  }

  .analytics-content ul {
    list-style: none;
    margin-bottom: 32px;
  }

  .analytics-content li {
    padding: 8px 0;
    padding-left: 24px;
    position: relative;
  }

  .analytics-content li::before {
    content: 'âœ“';
    position: absolute;
    left: 0;
    color: var(--primary-purple);
    font-weight: 700;
  }

  /* CTA */
  .cta-section {
    background: var(--gradient-purple);
    padding: 80px 0;
  }

  .cta-content {
    text-align: center;
    color: white;
  }

  .cta-content h2 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 16px;
  }

  .cta-content p {
    font-size: 1.125rem;
    opacity: 0.9;
    margin-bottom: 32px;
  }

  .btn-white {
    background: white;
    color: var(--primary-purple);
  }

  .btn-white:hover {
    background: #f3f4f6;
  }

  .btn-large {
    padding: 16px 36px;
    font-size: 16px;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .capabilities-grid,
    .ai-content,
    .analytics-preview {
      grid-template-columns: 1fr;
    }

    .channels-grid {
      grid-template-columns: repeat(3, 1fr);
    }

    .analytics-metrics {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .page-hero h1 {
      font-size: 2rem;
    }

    .channels-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .analytics-metrics {
      grid-template-columns: 1fr;
    }
  }
</style>
