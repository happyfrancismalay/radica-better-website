---
import BaseLayout from '../../layouts/BaseLayout.astro';

const features = [
  {
    title: 'Contact Sync',
    description: 'Automatically sync contacts and properties between RADICA and HubSpot.'
  },
  {
    title: 'Deal Triggers',
    description: 'Trigger marketing campaigns based on deal stages and pipeline activity.'
  },
  {
    title: 'Activity Tracking',
    description: 'See all marketing engagement data directly in HubSpot contact records.'
  },
  {
    title: 'List Management',
    description: 'Sync HubSpot lists for targeted campaigns in RADICA.'
  }
];
---

<BaseLayout title="HubSpot Integration - RADICA" description="Connect RADICA with HubSpot for unified marketing and sales automation.">

  <section class="page-hero">
    <div class="container">
      <span class="badge">Integration</span>
      <h1>HubSpot</h1>
      <p>Unified marketing and sales automation with HubSpot integration</p>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <h2 class="section-title">Features</h2>
      <div class="features-grid">
        {features.map((feature) => (
          <div class="feature-card">
            <h3>{feature.title}</h3>
            <p>{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="cta-section">
    <div class="container">
      <div class="cta-content">
        <h2>Ready to Connect HubSpot?</h2>
        <a href="/request-demo/" class="btn btn-white btn-large">Request Demo</a>
      </div>
    </div>
  </section>

</BaseLayout>

<style>
  .page-hero {
    background: linear-gradient(135deg, var(--header-dark) 0%, #FF7A59 100%);
    padding: 140px 0 80px;
    text-align: center;
    color: white;
  }

  .badge {
    display: inline-block;
    background: rgba(255, 255, 255, 0.2);
    padding: 6px 16px;
    border-radius: 20px;
    font-size: 13px;
    font-weight: 600;
    margin-bottom: 16px;
  }

  .page-hero h1 {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 20px;
  }

  .page-hero p {
    font-size: 1.25rem;
    opacity: 0.9;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 30px;
  }

  .feature-card {
    background: white;
    border-radius: 12px;
    padding: 30px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  .feature-card h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 12px;
  }

  .feature-card p {
    color: var(--text-gray);
    line-height: 1.6;
  }

  .cta-section {
    background: var(--gradient-purple);
    padding: 80px 0;
  }

  .cta-content {
    text-align: center;
    color: white;
  }

  .cta-content h2 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 32px;
  }

  .btn-white {
    background: white;
    color: var(--primary-purple);
  }

  .btn-large {
    padding: 16px 36px;
    font-size: 16px;
  }

  @media (max-width: 768px) {
    .features-grid { grid-template-columns: 1fr; }
    .page-hero h1 { font-size: 2rem; }
  }
</style>
