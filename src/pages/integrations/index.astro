---
import BaseLayout from '../../layouts/BaseLayout.astro';

const integrations = [
  {
    category: 'Messaging Channels',
    items: [
      { name: 'WhatsApp Business', slug: 'whatsapp', description: 'Send messages via WhatsApp Business API' },
      { name: 'SMS', slug: 'sms', description: 'Global SMS delivery' },
      { name: 'Email', slug: 'email', description: 'Transactional and marketing emails' }
    ]
  },
  {
    category: 'CRM & Sales',
    items: [
      { name: 'Salesforce', slug: 'salesforce', description: 'Sync contacts and trigger campaigns' },
      { name: 'HubSpot', slug: 'hubspot', description: 'Marketing and sales automation' },
      { name: 'Microsoft Dynamics', slug: 'dynamics', description: 'Enterprise CRM integration' }
    ]
  },
  {
    category: 'E-commerce',
    items: [
      { name: 'Shopify', slug: 'shopify', description: 'Sync customers and orders' },
      { name: 'Magento', slug: 'magento', description: 'Enterprise e-commerce' },
      { name: 'WooCommerce', slug: 'woocommerce', description: 'WordPress e-commerce' }
    ]
  },
  {
    category: 'Data & Analytics',
    items: [
      { name: 'Google Analytics', slug: 'google-analytics', description: 'Track campaign performance' },
      { name: 'Segment', slug: 'segment', description: 'Customer data platform' },
      { name: 'Snowflake', slug: 'snowflake', description: 'Data warehouse sync' }
    ]
  }
];
---

<BaseLayout title="Integrations - RADICA" description="Connect RADICA with your favorite tools. Explore 100+ integrations with CRMs, e-commerce platforms, messaging channels, and more.">

  <section class="page-hero">
    <div class="container">
      <h1>Integrations</h1>
      <p>Connect RADICA with your entire tech stack. 100+ integrations available.</p>
    </div>
  </section>

  <section class="section">
    <div class="container">
      {integrations.map((category) => (
        <div class="integration-category">
          <h2>{category.category}</h2>
          <div class="integrations-grid">
            {category.items.map((item) => (
              <a href={`/integrations/${item.slug}/`} class="integration-card">
                <h3>{item.name}</h3>
                <p>{item.description}</p>
                <span class="card-link">Learn More â†’</span>
              </a>
            ))}
          </div>
        </div>
      ))}
    </div>
  </section>

  <section class="cta-section">
    <div class="container">
      <div class="cta-content">
        <h2>Don't See Your Integration?</h2>
        <p>We can build custom integrations for your specific needs.</p>
        <a href="/contact/" class="btn btn-white btn-large">Contact Us</a>
      </div>
    </div>
  </section>

</BaseLayout>

<style>
  .page-hero {
    background: linear-gradient(135deg, var(--header-dark) 0%, var(--primary-purple-dark) 100%);
    padding: 140px 0 80px;
    text-align: center;
    color: white;
  }

  .page-hero h1 {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 20px;
  }

  .page-hero p {
    font-size: 1.25rem;
    opacity: 0.9;
  }

  .integration-category {
    margin-bottom: 60px;
  }

  .integration-category h2 {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 24px;
    color: var(--text-dark);
  }

  .integrations-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
  }

  .integration-card {
    background: white;
    border: 1px solid var(--border-color);
    border-radius: 12px;
    padding: 24px;
    transition: all 0.3s ease;
    display: block;
  }

  .integration-card:hover {
    border-color: var(--primary-purple);
    box-shadow: 0 10px 30px rgba(220, 38, 38, 0.1);
  }

  .integration-card h3 {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 8px;
    color: var(--text-dark);
  }

  .integration-card p {
    color: var(--text-gray);
    font-size: 14px;
    margin-bottom: 16px;
  }

  .card-link {
    color: var(--primary-purple);
    font-weight: 600;
    font-size: 14px;
  }

  .cta-section {
    background: var(--gradient-purple);
    padding: 80px 0;
  }

  .cta-content {
    text-align: center;
    color: white;
  }

  .cta-content h2 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 16px;
  }

  .cta-content p {
    font-size: 1.125rem;
    opacity: 0.9;
    margin-bottom: 32px;
  }

  .btn-white {
    background: white;
    color: var(--primary-purple);
  }

  .btn-large {
    padding: 16px 36px;
    font-size: 16px;
  }

  @media (max-width: 768px) {
    .integrations-grid {
      grid-template-columns: 1fr;
    }

    .page-hero h1 {
      font-size: 2rem;
    }
  }
</style>
