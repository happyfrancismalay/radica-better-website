<BaseLayout
  title="WhatsApp Marketing Platform | WhatsApp Business API - RADICA"
  description="Official WhatsApp Business API partner. Send broadcasts, automate conversations, and drive sales on WhatsApp. 98% open rate, 2B+ users. Start WhatsApp marketing with RADICA."
>
  <!-- Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(schemaProduct)} />
  <script type="application/ld+json" set:html={JSON.stringify(schemaFAQ)} />

  <!-- Hero Section -->
  <section class="page-hero whatsapp-hero">
    <div class="container">
      <span class="badge">WhatsApp Business API Partner</span>
